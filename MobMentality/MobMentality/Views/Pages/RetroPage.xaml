<Page x:Class="MobMentality.Pages.RetroPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MobMentality.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RetroPage"
      Background="#20171A" Opacity=".98">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Content="Done" Grid.Row="1" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="213" Height="57" FontSize="36" Click="Button_Click"/>
        <Label Name="DoneButton" Content="Time to retroflect" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72"/>

    </Grid>
</Page>
