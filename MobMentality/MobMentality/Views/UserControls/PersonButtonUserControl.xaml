<UserControl x:Class="MobMentality.Pages.UserControls.PersonButtonUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MobMentality.Pages.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             AllowDrop="True">
    <Grid>
        <Button Name="SetCurrentPersonButton" 
                HorizontalContentAlignment="Center" 
                HorizontalAlignment="Stretch" 
                Content="{Binding}" 
                FontSize="24"  
                PreviewMouseDown="SetCurrentPersonButton_PreviewMouseDown"/>
        <Button Name="SwitchToInactiveStateButton"  
                Content="x" 
                Width="30" 
                HorizontalAlignment="Right" 
                Click="SwitchActiveStateButton_Click"
                FontSize="24"/><!--Click="SwitchActiveStateButton_Click"--> 
    </Grid>
</UserControl>
